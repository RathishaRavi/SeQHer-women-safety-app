<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="0dp"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/tvInstructions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome to SeQHer\n  Please follow the instructions below:"
        android:textSize="23sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="10dp"
        android:textColor="@color/white"
        android:background="#ff6750a4"
        android:paddingBottom="15dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="✅ Permissions Required\n- Grant the necessary permissions to ensure all features work smoothly."
        android:textSize="16sp"
        android:padding="10dp"
        android:paddingBottom="10dp"/>
    <TextView
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="✅ Emergency Siren Activation\n- Double press the volume button to start the siren.\n- Long press the volume button to stop the siren."
        android:textSize="16sp"
        android:paddingBottom="10dp"/>

    <TextView
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="✅ Audio Recording for Security\n- Shake the phone to start recording audio after entering the app."
        android:textSize="16sp"
        android:paddingBottom="10dp"/>

    <TextView
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="✅ Voice Recognition for SOS Alert\n- If a help/SOS voice command is detected, the SOS Alert page will open automatically.\n- Call will be sent automatically from the first added Emergency contact."
        android:textSize="16sp"
        android:paddingBottom="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:paddingBottom="10dp"
        android:text="✅ Spy Detecting Hidden Camera\n- Take the camera in suspecious place , if camera detected and it will give speech recognition as camera detected"
        android:textSize="16sp" />

    <CheckBox
        android:id="@+id/checkBoxAgree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I have read and understood the instructions."
        android:textSize="16sp"
        android:paddingTop="10dp"/>

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="181dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:text="Register"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

</LinearLayout>
